{
  "name": "ChatterinoWatch",
  "version": "1.0",
  "description": "Reports the currently watched Twitch channel to Chatterino.",
  "permissions": ["nativeMessaging", "tabs"],
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
